<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tw.skyarrow.ehreader" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".app.main.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".app.gallery.GalleryActivity"
            android:parentActivityName=".app.main.MainActivity"/>

        <activity
            android:name=".app.photo.PhotoActivity"
            android:parentActivityName=".app.gallery.GalleryActivity"
            android:theme="@style/AppTheme.Photo"/>

        <activity
            android:name=".app.pref.PrefActivity"
            android:parentActivityName=".app.main.MainActivity"/>
    </application>
</manifest>
